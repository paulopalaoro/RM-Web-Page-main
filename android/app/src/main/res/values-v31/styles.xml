<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Android 12+ (API 31+): suprimir splash screen nativa -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowSplashScreenBackground">@android:color/black</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/transparent</item>
        <item name="android:windowSplashScreenAnimationDuration">1</item>
    </style>
</resources>
